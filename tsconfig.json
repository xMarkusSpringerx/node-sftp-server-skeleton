{
  "compileOnSave": true,

  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": [ "es2015", "dom" ],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "build",
    "target": "es6",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
